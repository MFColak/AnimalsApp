<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="animal" type="com.android.mfcolak.animalsapp.model.Animal"/>
        <variable name="listener" type="com.android.mfcolak.animalsapp.adapter.AnimalClickListener"/>
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:background="#B5DFF3"
    android:onClick="@{listener::onAnimalClicked}">
    <TextView
        android:id="@+id/AnimalId"
        android:text="@{String.valueOf(animal.uuid)}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
<ImageView
    android:id="@+id/imageView"
    android:background="#C2D0D6"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:downloadImage="@{animal.animalImage}"
    android:layout_weight="4"
    android:layout_margin="4dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5"
        android:gravity="center"
        android:layout_gravity="center">
        
        
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_margin="5dp"
            android:text="@{animal.animalName}"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@{animal.animalLocation}"/>

        <TextView
            android:id="@+id/lifespan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="@{animal.animalLifeSpan}"/>


    </LinearLayout>

</LinearLayout>
</layout>